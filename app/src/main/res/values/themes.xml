<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set window background color for light mode -->
        <item name="android:windowBackground">@color/lightBackground</item>
    </style>
    <style name="Theme.TaxiMeter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Text Colors -->
        <item name="android:textColor">@color/colorText</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Light Status Bar Icons -->
    </style>
</resources>

