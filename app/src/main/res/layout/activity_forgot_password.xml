<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/restelogo"
        android:layout_width="336dp"
        android:layout_height="353dp"
        android:layout_marginTop="80dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/reset"
    android:contentDescription="Reset logo" />

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:contentDescription="Email input field"
        android:hint="Enter your email"
        android:importantForAccessibility="yes"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@id/restelogo"
        android:layout_marginTop="40dp"
    android:layout_centerHorizontal="true" />

    <!-- Reset Password Button -->
    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:layout_marginTop="20dp"
        android:text="Reset Password"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textColor="@android:color/white"
        android:padding="14dp"
        android:textSize="16sp"
        android:importantForAccessibility="yes"
        android:contentDescription="Reset password button"
        android:layout_centerHorizontal="true" />

    <!-- Login Link (New) -->


    <TextView
        android:id="@+id/returnToLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log In"
        android:textSize="14sp"
        android:layout_below="@id/resetPasswordButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_orange_dark"
        android:clickable="true"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:contentDescription="Link to login screen"
        android:onClick="returnToLogin" />

</RelativeLayout>
